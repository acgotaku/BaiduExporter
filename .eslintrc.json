{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
        "amd": true,
        "webextensions": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "CORE": true,
        "CONNECT": true,
        "Utilities": true,
        "SetMessage": true,
        "disk": true,
        "yunData": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
		"no-unused-vars": [
			0
		],
        "no-console": [
            0
        ],
        "indent": [
            2,
            4
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "double",
            "avoid-escape"
        ],
        "semi": [
            2,
            "always"
        ]
    }
}
